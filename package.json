{
    "name": "@oak-digital/react-peek-a-header",
    "license": "MIT",
    "version": "0.0.9",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/main.umd.cjs",
    "module": "./dist/main.mjs",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": {
            "import": "./dist/main.mjs",
            "require": "./dist/main.umd.cjs"
        }
    },
    "scripts": {
        "dev": "vite",
        "preview": "vite preview",
        "demo:build": "cross-env BUILD=demo vite build",
        "demo:build:gh-pages": "cross-env BUILD=demo vite build --base=/$(node -p \"require('./package.json').name.split('/').pop()\")/",
        "build": "rimraf dist && vite build",
        "lint": "eslint .",
        "format": "prettier -w .",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@types/react": "^18.2.6",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "@vitejs/plugin-react": "^4.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-check-file": "^1.3.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-vitest": "^0.0.30",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.0",
        "typescript": "^4.9.5",
        "vite": "^4.3.5",
        "vite-plugin-dts": "^2.3.0",
        "vitest": "^0.28.5"
    },
    "dependencies": {
        "@oak-digital/peek-a-header": "^0.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
